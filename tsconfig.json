{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "useDefineForClassFields": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "importHelpers": true,
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "lib": ["ESNext", "DOM"],
        "types": ["vite/client"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./mocks/**/*.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules", "dist", "**/*.js"]
}
